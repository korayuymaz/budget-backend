generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Expenses {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  description String?
  amount Float
  date DateTime
  category String
  currency String
  isFixed Boolean @default(false)
  userId String @db.ObjectId
  User User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Earnings {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  description String?
  amount Float
  currency String
  date DateTime
  userId String @db.ObjectId
  User User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?    @unique
  preferredCurrency String?
  googleId String?
  expenses Expenses[]
  earnings Earnings[]
}




